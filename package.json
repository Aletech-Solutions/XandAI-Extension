{
  "name": "xandai-extension",
  "version": "1.14.0",
  "description": "XandAI Chrome Extension - Send selected text to your local Ollama LLM with custom prompts",
  "scripts": {
    "test": "jest --config tests/jest.config.js",
    "test:watch": "jest --config tests/jest.config.js --watch",
    "test:coverage": "jest --config tests/jest.config.js --coverage",
    "test:ci": "jest --config tests/jest.config.js --ci --coverage --watchAll=false",
    "lint": "eslint src/ --ext .js",
    "lint:fix": "eslint src/ --ext .js --fix",
    "build": "npm run lint && npm run test",
    "dev": "npm run test:watch"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "babel-jest": "^29.7.0",
    "eslint": "^8.50.0",
    "eslint-plugin-jest": "^27.4.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ]
    ]
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "jest": true,
      "webextensions": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:jest/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2021,
      "sourceType": "module"
    },
    "plugins": [
      "jest"
    ],
    "rules": {
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ],
      "no-console": "off",
      "prefer-const": "error",
      "no-var": "error"
    },
    "globals": {
      "chrome": "readonly",
      "testUtils": "readonly"
    }
  },
  "jest": {
    "preset": "./tests/jest.config.js"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "ollama",
    "llm",
    "text-processing"
  ],
  "author": "XandAI",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/xandai/xandai-extension.git"
  },
  "bugs": {
    "url": "https://github.com/xandai/xandai-extension/issues"
  },
  "homepage": "https://github.com/xandai/xandai-extension#readme"
}
